//map of to do list
let toDo = new Map();
toDo.set('party', 'Friday');
toDo.set('rehearsal', 'Saturday');
toDo.set('homework', 'Sunday');
toDo.set('clean', 'Sunday');
toDo.set('hike', 'Monday'); // changed todo to toDo because it is undefined

//loop through map and output
for (let [event , day] of toDo) {
  console.log('toDo: ' + event + ' on ' + day); // corrected To Do to toDo because by it being spelled differently it would return undefined 
}
